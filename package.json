    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.4",
    "@vscode/l10n": "^0.0.18",
    "canvas-confetti": "^1.9.4",
    "front-matter": "^4.0.2",
    "katex": "^0.16.28",
